<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.project.belajarmengaji.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/b_belajar"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonBelajar" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/b_kuis"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonKuis" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/exit"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonExit" />

    <TextView
        android:id="@+id/tampil_nis_siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIS Anda : "
        android:textAlignment="center"
        android:textSize="20sp"/>

</RelativeLayout>