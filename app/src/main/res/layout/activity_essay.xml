<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".EssayActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">


        <ImageButton
            android:id="@+id/essayHewan"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/essay_hewan" />

        <ImageButton
            android:id="@+id/essaykataBenda"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/essay_kata_benda" />

        <ImageButton
            android:id="@+id/essaykataSifat"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/essay_kata_sifat" />

        <ImageButton
            android:id="@+id/essaykataKerja"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/essay_kata_kerja" />

        <ImageButton
            android:id="@+id/essaymakananMinuman"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/essay_makanan_minuman" />
    </LinearLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonBack" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/exit"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonExit" />

    <TextView
        android:id="@+id/nis_menu_kuis_essay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIS Anda : "/>

</RelativeLayout>