<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg1"
tools:context=".SkorAkhirActivity">


         <ImageView
            android:id="@+id/gambarMahkota"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mahkota" />

        <ImageView
            android:background="@drawable/skor_tertinggi"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"/>

        <ImageView
            android:id="@+id/blackboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@drawable/blackboard"/>

        <ImageView
            android:id="@+id/gambarSkor"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="85dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/skor" />

        <ImageButton
            android:id="@+id/ulangi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="270dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/repeat" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="120dp"
            android:layout_marginLeft="18dp"
            android:layout_height="50dp"
            android:background="@drawable/home"
            android:id="@+id/buttonHome" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/menu_kuis"
            android:id="@+id/buttonKuis" />
    </LinearLayout>

        <TextView
        android:text="Skor Tertinggi Anda :"
            android:id="@+id/nilaiTertinggi"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#14aa34"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:text="Skor Anda :"
            android:id="@+id/HasilSkor"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="162dp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#14aa34"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/nis_menu_skor_akhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIS Anda : "/>



</RelativeLayout>